<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:paddingBottom="@dimen/margin_default"
    android:paddingLeft="@dimen/horizontal_padding_welcome"
    android:paddingRight="@dimen/horizontal_padding_welcome"
    android:paddingTop="@dimen/margin_default"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/text_micopi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_logo"
        android:gravity="center"
        android:text="micopi"
        android:textColor="#3C3C3C"
        android:textSize="44sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/text_micopi"
        android:layout_below="@id/text_micopi"
        android:layout_marginTop="-16dp"
        android:text="pico"
        android:textColor="#3C3C3C"
        android:textSize="33sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/group_welcome_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Contact Picker Button: -->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:onClick="selectButtonPressed"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/pick_contact"
                android:textAllCaps="true"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_size" />

        </android.support.v7.widget.CardView>

        <!-- Description Text: -->

        <TextView
            android:gravity="center"
            android:id="@+id/text_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_default"
            android:text="@string/picture_will_be_previewed"
            android:textColor="#3C3C3C"
            android:textSize="@dimen/text_size" />

        <!-- Batch Mode Button: -->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:onClick="crawlButtonPressed"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/auto_mode"
                android:textAllCaps="true"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_size" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <!-- Purchase Button: -->

    <android.support.v7.widget.CardView
        android:id="@+id/card_button_upgrade"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:onClick="settingsButtonPressed"
        android:visibility="visible"
        app:cardBackgroundColor="@color/primary_dark"
        app:cardElevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/button_buy_full"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size" />

    </android.support.v7.widget.CardView>
    
    <!-- Upgrade Teaser -->

    <TextView
        android:gravity="center"
        android:id="@+id/text_upgrade_teaser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/card_button_upgrade"
        android:layout_marginBottom="@dimen/margin_small"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size" />

</RelativeLayout>
